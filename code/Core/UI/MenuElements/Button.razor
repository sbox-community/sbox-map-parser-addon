@namespace MapParser
@inherits Panel

<style>
	
	Button {
		background: linear-gradient(to bottom, #7f7f7f, #bdbdbd);
		box-shadow: 0px 0px 10px 2px rgba(25, 25, 25, 0.9);
		padding:0px 4px 2px 4px;
		flex-direction:row;
		border-radius: 2px;
		flex-shrink: 0;
		margin:4px;

		&:hover{
			background: linear-gradient(to top, #bdbdbd);
		}

		&.True{
			sound-in: ui.popup.message.open;
			background: linear-gradient(to top, #7f7f7f, #bdbdbd);
			box-shadow: 0px 0px 16px 3px rgba(25, 25, 25, 0.9);
			top:1px;
			text-shadow: 0 0 2px rgba(1,1,1,0.15);
		}
		i{
			align-items:center;
			top:4%;
		}
}
</style>



